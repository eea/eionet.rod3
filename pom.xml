    <profiles>
        <profile>
          <id>docker</id>
          <properties>
            <tomcat.port>4590</tomcat.port>
          </properties>
          <build>
            <plugins>
              <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>0.23.0</version>
                <configuration>
                  <verbose>false</verbose>
                  <logDate>default</logDate>
                  <autoPull>true</autoPull>
                  <images>
                    <image>
                      <alias>service</alias>
                      <name>docker.io/eeacms/${project.artifactId}</name>
                      <build>
                        <from>tomcat:8.5.0-jre8</from>
                        <maintainer>SÃ¸ren Roug &lt;soren.roug@eea.europa.eu&gt;</maintainer>
                        <tags>
                          <tag>latest</tag>
                          <tag>${project.version}</tag>
                          <!-- <tag>${maven.build.timestamp}</tag> -->
                        </tags>
                        <assembly>
                          <descriptorRef>rootWar</descriptorRef>
                        </assembly>
                        <runCmds>
                          <run>rm -rf /usr/local/tomcat/conf/logging.properties /usr/local/tomcat/webapps/*</run>
                          <run>mv /maven/ROOT.war /usr/local/tomcat/webapps/ROOT.war</run>
                        </runCmds>
                        <optimise>true</optimise>

                        <!-- Expose ports -->
                        <ports>
                          <port>8080</port>
                          <port>8009</port>
                        </ports>
                        <!-- Default command for the build image -->
                        <!--<cmd>catalina.sh run</cmd> -->
                      </build>
                      <run>
                        <env>
                          <LANG>C.UTF-8</LANG>
                          <TZ>Europe/Copenhagen</TZ>
                          <CATALINA_OPTS>-Dinitial.username=roug
                          -Dcas.service=http://localhost:4590
                          -Ddb.driver=org.mariadb.jdbc.Driver
                          -Ddb.url=jdbc:mariadb://database/rod3 -Ddb.username=roduser -Ddb.password=password
                          -Ddeploy.contexts=test
                          </CATALINA_OPTS>
                        </env>
                        <!-- Assign dynamically mapped ports to maven variables (which can be reused in integration tests) -->
                        <ports>
                          <port>tomcat.port:8080</port>
                        </ports>
                        <wait>
                          <!-- Check for this URL to return a 200 return code .... -->
                          <!-- <url>http://${docker.host.address}:${tomcat.port}/</url> -->
                          <log>INFO: Server startup in</log>
                          <!-- ... but at max 300 seconds -->
                          <time>300000</time>
                        </wait>
                        <links>
                          <link>database</link>
                        </links>
                        <log>
                          <prefix>TC</prefix>
                          <color>cyan</color>
                        </log>
                      </run>
                    </image>

                    <image>
                      <alias>database</alias>
                      <name>mariadb:10.2.10</name>
                      <run>
                        <ports>
                          <port>database.port:3306</port>
                        </ports>
                        <env>
                          <LANG>C.UTF-8</LANG>
                          <TZ>Europe/Copenhagen</TZ>
                          <MYSQL_ROOT_PASSWORD>mayeceju</MYSQL_ROOT_PASSWORD>
                          <MYSQL_DATABASE>rod3</MYSQL_DATABASE>
                          <MYSQL_USER>roduser</MYSQL_USER>
                          <MYSQL_PASSWORD>password</MYSQL_PASSWORD>
                        </env>
                        <cmd>mysqld --character-set-server=utf8 --collation-server=utf8_general_ci</cmd>
                        <wait>
                          <tcp>
                            <ports>
                              <port>3306</port>
                            </ports>
                          </tcp>
                          <time>60000</time>
                        </wait>
                      </run>
                    </image>
                  </images>

                </configuration>

                <!-- Hooking into the lifecycle -->
                <executions>
                  <execution>
                    <id>start</id>
                    <phase>pre-integration-test</phase>
                    <goals>
                      <goal>build</goal>
                      <goal>start</goal>
                    </goals>
                  </execution>
                  <execution>
                    <id>stop</id>
                    <phase>post-integration-test</phase>
                    <goals>
                      <goal>stop</goal>
                    </goals>
                  </execution>
                </executions>
              </plugin>

